@model LoginModel
@{
    Layout = "_LayoutDeslogado";
    ViewData["Title"] = "Login";
}


<style>
    .gradient-custom-2 {
        /* fallback for old browsers */
        background: #fccb90;
        /* Chrome 10-25, Safari 5.1-6 */
        background: -webkit-linear-gradient(to right, #000428, #004e92);
        /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
        background: linear-gradient(to right, #000428, #004e92);
    }

</style>

@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["MensagemSucesso"]
        <button type="button" class="close close-alert" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["MensagemErro"]
        <button type="button" class="close close-alert" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<section class="h-100 gradient-form" style="background-color: #eee;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-xl-10">
                <div class="card rounded-3 text-black">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="card-body p-md-5 mx-md-4">

                                <div class="text-center">
                                    <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/lotus.webp"
                                         style="width: 185px;" alt="logo">
                                    <h4 class="mt-1 mb-5 pb-1">Login</h4>
                                </div>

                                <form asp-controller="Login" asp-action="Entrar" method="post">
                                    <div class="form-outline mb-4" style="margin-left: 31%">
                                        <input asp-for="Login" type="text" id="login" style="width: 55%" class="form-control" placeholder="Usuário" />
                                    @Html.ValidationMessageFor(x => x.Login)
                                    </div>

                                    <div class="form-outline mb-3" style="margin-left: 31%">
                                        <input asp-for="Senha" type="password" id="senha" style="width: 55%" class="form-control" placeholder="Senha" />
                                        @Html.ValidationMessageFor(x => x.Senha)
                                    </div>

                                    <div class="text-center">
                                        <button class="btn btn-primary btn-block fa-lg gradient-custom-2 mb-1" style="width: 38%" type="submit">
                                            Entrar
                                        </button>
                                    </div>
                                    <div class="text-center pt-1 mb-2 pb-1">
                                        <a class="text-muted" href="#!">Esqueceu a senha?</a>
                                    </div>

                                    <div class="d-flex align-items-center justify-content-center pb-4">
                                        <p class="mb-0 me-2">Não possui uma conta?</p>
                                        <button type="button" class="btn btn-outline-danger">Create new</button>
                                    </div>

                                </form>

                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>