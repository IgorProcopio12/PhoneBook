@model UsuarioModel
@{
    ViewData["Title"] = "Confirmação de Exclusão";
}

<div>
    <h3>Deseja apagar o contato (@Model.Nome)?</h3>
</div>

<a class="btn btn-primary d-inline-block" asp-action="Index" asp-controller="Usuario" role="button">Cancelar</a>
<a class="btn btn-danger d-inline-block" asp-action="Deletar" asp-route-id="@Model.Id" asp-controller="Usuario" role="button">Confirmar Exclusão</a>
